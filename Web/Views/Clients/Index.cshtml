<section class="clients-section container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Clients</h2>
        <a asp-action="Edit" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var client in Model)
                            {
                                <tr>
                                    <td>@client.Name</td>
                                    <td>@client.Email</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-outline-warning btn-sm me-2">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@client.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>